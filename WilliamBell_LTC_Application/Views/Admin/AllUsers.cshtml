@model IEnumerable<WilliamBell_LTC_Application.Models.User>

@{
    ViewBag.Title = "All Users";
}

<h2>All Users</h2>
<p>@Html.ActionLink("Back", "Dashboard", "Dashboard", null, new { @class = "btn btn-secondary" })</p>
<table class="table table-sm">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Join Date
        </th>
        <th>
            Number Of Warnings
        </th>
        <th>
            Number Of Suspensions
        </th>
        <th>
            Number Of Blockings
        </th>
        <th>
            Comments Blocked
        </th>
        <th>
            Account Suspended
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.FirstName @item.LastName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoinDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfWarnings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfSuspension)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfBlockings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspensionUntil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentsBlockedUntil)
        </td>

        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-dark" }) 
        </td>
    </tr>
}

</table>
