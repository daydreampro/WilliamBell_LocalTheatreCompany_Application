@using WilliamBell_LTC_Application.Models.ViewModels
@using WilliamBell_LTC_Application.Models
@model BlogListViewModel



<div class="card mb-4" style=" overflow:hidden; position:relative;">
    <div class="row no-gutters" style="">
        <div class="col-md-4 border-right">
            <img src="@Url.Content(Model.Image)" alt="" style=" object-fit:cover; width:100%; max-height:250px;">
        </div>

        <div class="col-md-8" >
            <div class="card-body"style="position: absolute;">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Synopsis</p>

            </div>
            <div class="card-footer d-flex justify-content-between align-items-end bg-light" style="position:absolute; bottom:0; width:100%; padding:5px 1.25rem!important;">
                <p class="card-text"><small class="text-muted">By @Model.AuthorName  @Model.Posted </small></p>
                <div>
                    <span class="badge badge-dark"><i class=" fas fa-thumbs-up"></i> @Model.PostVotes</span>
                    <span class="badge badge-dark"><i class=" fas fa-comment"></i> @Model.NumberOfComments</span>
                    <a class="btn btn-dark" href="@Url.Action("ViewBlog","Blogs",new { postId = Model.PostId})">Read More</a>
                </div>
            </div>
        </div>

    </div>
</div>