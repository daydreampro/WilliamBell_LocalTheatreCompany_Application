@using WilliamBell_LTC_Application.Models.ViewModels
@using WilliamBell_LTC_Application.Models
@model ReviewListViewModel


<div class="card">
    <img src="@Url.Content(Model.Image)" class="card-img-top" style=" object-fit:cover; width:100%; max-height:250px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><small class="text-muted">By @Model.AuthorName  @Model.Posted </small></p>
        <p class="card-text">@Model.Synopsis</p>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-end">
        <a class="btn btn-dark" href="@Url.Action("ViewReview","Reviews",new { postId = Model.PostId})">Read More</a>
        <div>
            <span class="badge badge-dark"><i class=" fas fa-thumbs-up"></i> @Model.PostVotes</span>
            <span class="badge badge-dark"><i class=" fas fa-comment"></i> @Model.NumberOfComments</span>
        </div>
    </div>
</div>




